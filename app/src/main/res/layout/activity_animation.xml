<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AnimationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="8dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnBlink"
            android:textColor="@android:color/white"
            android:text="Blink" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnBounce"
            android:textColor="@android:color/white"
            android:text="Bounce" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnFadeIn"
            android:textColor="@android:color/white"
            android:text="Fade In" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnFadeOut"
            android:textColor="@android:color/white"
            android:text="Fade Out" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnMove"
            android:textColor="@android:color/white"
            android:text="Move" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnRotate"
            android:textColor="@android:color/white"
            android:text="Rotate" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnSeq"
            android:textColor="@android:color/white"
            android:text="Sequential" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnSlideD"
            android:textColor="@android:color/white"
            android:text="Slide Down" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnSlideU"
            android:textColor="@android:color/white"
            android:text="Slide Up" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnTogether"
            android:textColor="@android:color/white"
            android:text="Together" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnZoomIn"
            android:textColor="@android:color/white"
            android:text="Zoom In" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="btnZoomOut"
            android:textColor="@android:color/white"
            android:text="Zoom Out" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_grey"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:onClick="shimmerLayout"
            android:textColor="@android:color/white"
            android:text="Shimmer Layout" />
    
    </LinearLayout>
    </ScrollView>